<div class="row feed_item">
	<div class="col-md-2 hidden-xs">
		<center>
			<a href="<%= user_path(review.user) %>"><%= image_tag(review.user_avatar.url('150x150'), :class => 'img-circle') %></a>
			<p><a href="<%= user_path(review.user) %>"><%= review.user_name %></a></p>
		</center>
	</div>
	<div class="col-md-9 feed_body review_body">
		<header>
			<a href="<%= review_path(review) %>"><%= review.title %></a>
		</header>
		<section>
			<%= strip_tags(review.body).truncate(118, :separator => ' ') %>
		</section>
		<footer>
			<div class="wrap">
				<ul class="metas">
					<li>
						<time datetime="<%= review.created_at %>"><%= distance_of_time_in_words_to_now(review.created_at) %>Ââç</time>
					</li>
					<li style="display:none">
						<a href="#"><i class="fa fa-comments-o"></i>1</a>
					</li>
				</ul>
		</footer>
	</div>
	<div class="col-md-1 feed-like">
		<%= voteable_tag(review) %>
	</div>
</div>