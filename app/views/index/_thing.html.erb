<div class="row mb_30">
	      <div class="col-xs-0 col-md-2 hidden-xs">
	        <a href="<%= user_path(thing.user) %>"><%= image_tag(thing.user.avatar_url('60x60'), :width => 60, :height => 60, :class => "img-circle img-responsive center-block") if thing.user %></a>
	      </div>
	      <div class="col-xs-12 col-md-10 item">
        	<center><a href="<%= thing_path(thing) %>" target="_blank"><%= image_tag(thing.photos.first.avatar_url('800x800'), :class => 'img-responsive') if thing.photos.first %></a></center>
        	<p class="item_title"><a href="<%= thing_path(thing) %>" target="_blank"><%= thing.title %></a></p>
        	<div class="item_author"><a href="<%= user_path(thing.user) %>"><%= image_tag(thing.user_avatar.url('60x60'), :width => 26, :height => 26, :class => "img-circle img-responsive pull-left") if thing.user %></a><a href="<%= user_path(thing.user) %>"><%= thing.user_name %></a><span class="pull-right item_fav"><i class="glyphicon glyphicon-heart-empty"></i><%= thing.fancier_count %></span></div>
	      </div>
	    </div>