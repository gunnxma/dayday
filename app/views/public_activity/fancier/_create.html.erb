<% if activity.trackable %>
  <% if activity.trackable.thing.publish %>
  <li class="row">
  	<div class="activity-title white">
  		<i class="fa fa-heart"></i>喜欢<a href="<%= thing_path(activity.trackable.thing) %>" target="_blank"><time class="pull-right" datetime="<%= activity.created_at %>"><%= distance_of_time_in_words_to_now(activity.created_at) %>前</time></a>
  	</div>
  	<center><a href="<%= thing_path(activity.trackable.thing) %>" class="fancy-img" target="_blank"><%= image_tag(activity.trackable.thing.photos.first.avatar_url('800x800'), :class => 'img-responsive') if activity.trackable.thing.photos.first %></a></center>
    <div><a class="fancy-thing-title" href="<%= thing_path(activity.trackable.thing) %>" target="_blank"><%= activity.trackable.thing.title %></a></div>
    <div class="fancy-list-count">
    	<a href="<%= thing_path(activity.trackable.thing) %>" target="_blank"><i class="fa fa-heart-o"></i><%= activity.trackable.thing.fanciers.count %></a>
    	<% if activity.trackable.thing.owners.count > 0 %>
    	<a href="<%= thing_path(activity.trackable.thing) %>" target="_blank"><i class="fa fa-check-circle-o"></i><%= activity.trackable.thing.owners.count %></a>
    	<% end %>
    	<% if activity.trackable.thing.reviews.count > 0 %>
    	<a href="<%= thing_reviews_path(activity.trackable.thing) %>" target="_blank"><i class="fa fa-pencil"></i><%= activity.trackable.thing.reviews.count %></a>
    	<% end %>
   	</div>
  </li>
  <% end %>
<% end %>