<li class="row user-review feeling-review">
  <p><a href="<%= thing_feelings_path(feeling.thing) %>" target="_blank"><i class="fa fa-quote-left"></i><%= feeling.body %><i class="fa fa-quote-right"></i></a></p>
  <div class="fancy-list-count">
  	<i class="fa fa-thumbs-o-up"></i><span><%= feeling.feeling_ups.count %></span>
 	</div>
 	<div class="user-feeling-thing row">
 		<div class="col-md-4 feeling-thing-img">
 			<a href="<%= thing_path(feeling.thing) %>" class="feeling-img" target="_blank"><%= image_tag(feeling.thing.photos.first.avatar_url('800x800')) if feeling.thing.photos.first %></a>
 		</div>
 		<div class="col-md-8 feeling-thing-title">
 			<h6><a href="<%= thing_path(feeling.thing) %>" target="_blank"><%= feeling.thing.title.truncate(15, :separator => ' ') %></a></h6>
 			<div class="feeling-thing-count"> 				
		  	<a href="<%= thing_path(feeling.thing) %>" target="_blank"><i class="fa fa-heart-o"></i><%= feeling.thing.fanciers.count %></a>
		  	<% if feeling.thing.owners.count > 0 %>
		  	<a href="<%= thing_path(feeling.thing) %>" target="_blank"><i class="fa fa-check-circle-o"></i><%= feeling.thing.owners.count %></a>
		  	<% end %>
		  	<% if feeling.thing.reviews.count > 0 %>
		  	<a href="<%= thing_reviews_path(feeling.thing) %>" target="_blank"><i class="fa fa-pencil"></i><%= feeling.thing.reviews.count %></a>
		  	<% end %>
 			</div>
 		</div>
 	</div>
</li>