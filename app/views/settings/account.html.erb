<div class="top_container container">
  <div class="row">
    <div class="col-xs-12 col-md-9 white">
      <div class="page-header">
        <h3><i class="fa fa-cogs"></i>个人信息</h3>
      </div>
      <% if flash[:notice] %>
        <div class="alert alert-warning" role="alert">         
          <%= flash[:notice] %>
        </div>
      <% end %>
      <h3><i class=""></i>修改密码</3>
      <%= form_for @user, :url => settings_profile_path, :html => { :class => "form-horizontal", :role => "form" } do |f| %>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">姓名*</label>
        <div class="col-sm-6">
          <%= f.text_field :name, :class => "form-control", :maxlength => 20 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <button type="submit" class="btn btn-primary">保存</button>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-xs-0 col-md-3 hidden-xs setting-menu">
      <%= render 'right' %>
    </div>
  </div>
</div>