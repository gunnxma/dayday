<div class="row feed_item">
	<div class="col-md-2 hidden-xs">
		<center>
			<%= image_tag(lfeeling.user_avatar.url('150x150'), :class => 'img-circle') %>
			<p><a href="#"><%= lfeeling.user_name %></a></p>
		</center>
	</div>
	<div class="col-md-10 feed_body">
		<section>
			<%= lfeeling.body %>
		</section>
		<footer>
			<div class="wrap">
				<ul class="metas">
					<li>
						<time datetime="<%= lfeeling.created_at %>"><%= distance_of_time_in_words_to_now(lfeeling.created_at) %>前</time>
					</li>
					<li>
						<a href="#" title="回复"><i class="fa fa-reply"></i></a>
					</li>
				</ul>
		</footer>
	</div>
</div>