<div class="top_container">
  <div class="row">
    <div class="col-md-3 hidden-xs"></div>
    <div class="col-xs-12 col-md-6 white">
      <div class="page-header">
        <h3>注册</h3>
      </div>
      <% if @identity && @identity.errors.any? %>
        <div class="alert alert-warning" role="alert">         
          <ul>
          <% @identity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_tag "/auth/identity/register", :class => "form-horizontal", :role => "form" do %>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">昵称</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="name" name="name" value="<%= @identity.try(:name)%>" placeholder="请输入您的昵称">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">邮箱</label>
        <div class="col-sm-8">
          <input type="email" class="form-control" id="email" name="email" value="<%= @identity.try(:email)%>" placeholder="请输入您的Email地址，Email地址将做为登录帐号">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <label for="password_confirmation" class="col-sm-2 control-label">确认密码</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="请再次输入密码">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">注册</button><span style="margin-left:30px">已有帐号？<%= link_to "点此登录", new_identity_path, :class => "btn btn-success" %></span>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-3 hidden-xs"></div>
  </div>
  <div class="row" style="padding-bottom:30px;">
    <div class="col-md-3 hidden-xs"></div>
    <div class="col-xs-12 col-md-6 white">
      <center>
        <div class="page-header">
          <h5>使用社交帐号登录</h5>
        </div>
        <a href="#"><%= image_tag("qq.png", :class => "img-rounded")%></a>
        <div class="page-header">
        </div>
      </center>
    </div>
    <div class="col-md-3 hidden-xs"></div>
  </div>
</div>