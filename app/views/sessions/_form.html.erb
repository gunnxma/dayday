<%= form_tag "/auth/identity/callback", :class => "form-horizontal", :role => "form" do %>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">邮箱</label>
        <div class="col-sm-8">
          <input type="email" class="form-control" id="auth_key" name="auth_key" placeholder="请输入注册时的Email地址">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">登录</button><span style="margin-left:30px">还没有用户名？<%= link_to "点此注册", new_identity_path, :class => "btn btn-success" %></span>
        </div>
      </div>
      <% end %>